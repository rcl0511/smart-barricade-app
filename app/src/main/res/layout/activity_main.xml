<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="새 기기 연결"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxBackgroundMode="outline">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/serialEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="시리얼 입력" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConnect"
                            style="?attr/materialButtonTonalStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            app:backgroundTint="#3C339FFF"
                            app:cornerRadius="12dp"
                            android:text="BLE 연결" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWifiAp"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="12dp"
                            android:text="Wi-Fi AP" />
                    </LinearLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDisconnect"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="연결 해제" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipConn"
                            style="@style/Widget.Material3.Chip.Assist.Elevated"
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:text="연결 안 됨"
                            app:chipIcon="@android:drawable/stat_sys_data_bluetooth"
                            app:chipIconTint="#2196F3"
                            app:chipIconVisible="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRtt"
                            style="@style/Widget.Material3.Chip.Assist.Elevated"
                            android:layout_width="163dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:text="RTT: - ms" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtDeviceTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="바리케이드 #A-10"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/chipBattery"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBattery"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98%"
                        app:chipIcon="@drawable/ic_battery"
                        app:chipIconVisible="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtDeviceInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="신호 dBm | 마지막 통신: | 상태: "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtDeviceTitle" />

                    <TextView
                        android:id="@+id/txtSensorStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="압력 센서 상태: kgf"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtDeviceInfo" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartPressure"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/txtSensorStatus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingClass"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"

                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtSensorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="실시간 상태 대시보드"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtSensorLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="대기"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtFsrValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="로드셀 값: -"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtLedState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="모드: -"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtBuzzerState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="과부하 상태: -"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtMotorState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="게이트: -"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtLastUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="마지막 수신: -"
                        android:textSize="12sp"
                        android:textColor="@color/navy_300" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수동 제어"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGateOpen"
                            style="?attr/materialButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="긴급 개방"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            app:backgroundTint="#F44336" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGateStop"
                            style="?attr/materialButtonTonalStyle"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="강제 정지"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            app:backgroundTint="?attr/colorTertiaryContainer" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGateClose"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="폐쇄"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">

                        <Button
                            android:id="@+id/btnModeManual"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수동 제어 (MANUAL)" />

                        <Button
                            android:id="@+id/btnModeAuto"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="자동 제어 (AUTO)" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:text="* 자동 제어: 임계치 초과 시 EXTEND (10초 유지)" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAlarms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_alarm" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 등급 선택 -->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:checked="true"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbWarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARN"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ERROR"/>

        <!-- 프리셋 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPresetLoad"
                style="?attr/materialButtonTonalStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="하중 임계 (테스트)"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPresetDensity"
                style="?attr/materialButtonTonalStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="밀집도 상승 (테스트)"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPresetBattery"
                style="?attr/materialButtonTonalStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="배터리 부족 (테스트)"/>
        </LinearLayout>

        <!-- 제목/내용/디바이스ID -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목 (예: 우측 패널 하중 임계 근접)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="내용 (예: 현재 하중 150kg, 임계값 200kg, 2m 구간 밀집도 상승)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="디바이스 ID (예: A-10)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 액션 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="취소"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreate"
                style="?attr/materialButtonTonalStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="알림 생성"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:paddingTop="12dp"
    android:paddingBottom="24dp">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- (옵션) 헤더 -->
        <TextView
            android:id="@+id/txtSheetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바리케이드 상세"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- 0) 센서 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@android:color/white" />

        <!-- 1) 히트맵 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="현재상태"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/imgBarricadeBase"
                        app:srcCompat="@drawable/heatmap_placeholder"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/cd_barricade"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/imgHeatSpot"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/heat_radial"
                        android:alpha="0.75"
                        android:contentDescription="@string/cd_heatmap" />
                </FrameLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2) 조작 패널 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="조작 패널"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenNow"
                        style="?attr/materialButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="긴급 개방" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenStep"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="단계 개방" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClose"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="폐쇄" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLedPanel"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="보안 요원 연결"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="임계치 초과시 자동제어(단계개방 + 적색점멸)"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3) LED 제어 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="LED 제어"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilLedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:hintEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/navy_300">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtLedMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="LED 표시 텍스트 (예: CAUTION)"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:textColorHint="@color/navy_300"
                        android:textColor="@android:color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <FrameLayout
                    android:id="@+id/ledPreview"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_led_panel">

                    <TextView
                        android:id="@+id/txtLedPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="PREVIEW"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLedRed"
                        style="?attr/materialButtonTonalStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="빨강"
                        app:backgroundTint="@color/led_red"
                        android:textColor="@android:color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLedYellow"
                        style="?attr/materialButtonTonalStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="노랑"
                        app:backgroundTint="@color/led_yellow"
                        android:textColor="@android:color/black" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLedGreen"
                        style="?attr/materialButtonTonalStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="초록"
                        app:backgroundTint="@color/led_green"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="※ 텍스트 입력 후 색상 버튼을 누르면 LED 미리보기 색이 바뀝니다."
                    android:textColor="@color/navy_300"
                    android:textSize="12sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
